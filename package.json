{
  "name": "ffsmio-resizable",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "yarn build:packages && next build",
    "build:packages": "yarn workspace @ffsm/resizable build",
    "clean": "yarn workspace @ffsm/resizable clean",
    "start": "next start",
    "lint": "next lint",
    "predeploy": "yarn build",
    "deploy": "gh-pages -d out",
    "vercel-build": "yarn install -W && yarn build:packages && yarn build",
    "netlify-build": "yarn install -W && yarn build:packages && yarn build"
  },
  "dependencies": {
    "@ffsm/resizable": "file:./packages/resizable",
    "clsx": "^2.1.1",
    "next": "15.4.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-syntax-highlighter": "^15.6.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-syntax-highlighter": "^15.5.13",
    "eslint": "^9",
    "eslint-config-next": "15.4.1",
    "gh-pages": "^6.3.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.45.1",
    "rollup-plugin-dts": "^6.2.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
